<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_table_weiXin"
        android:onClick="onClick">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/tab_img_weiXin"
            android:background="@drawable/wx">
        </ImageButton>
        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_weiXin"
            android:gravity="center"
            android:text="微信"/>
    </LinearLayout>

    <!--通讯录-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_table_txl"
        android:onClick="onClick">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/tab_img_txl"
            android:background="@drawable/lxr">
        </ImageButton>
        <TextView
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_txl"
            android:text="通讯录"
            android:gravity="center"/>
    </LinearLayout>

    <!--发现-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_table_faXian"
        android:onClick="onClick">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/tab_img_faXian"
            android:background="@drawable/fx">
        </ImageButton>
        <TextView
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_faXian"
            android:gravity="center"
            android:text="发现"/>
    </LinearLayout>

    <!--我-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_table_me"
        android:onClick="onClick">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/tab_img_me"
            android:background="@drawable/wd">
        </ImageButton>
        <TextView
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_me"
            android:gravity="center"
            android:text="我"/>
    </LinearLayout>
</LinearLayout>
